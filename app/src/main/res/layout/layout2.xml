<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_height="@dimen/text_height"
        android:layout_width="@dimen/text_width"
        android:background="@color/colorWhite"
        android:id="@+id/text1"/>
    <TextView
        android:layout_height="@dimen/text_height"
        android:layout_width="@dimen/text_width"
        android:background="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:id="@+id/text2"/>
    <TextView
        android:layout_height="@dimen/text_height"
        android:layout_width="@dimen/text_width"
        android:background="@color/colorWhite"
        android:layout_alignParentRight="true"
        android:id="@+id/text3"/>
    <TextView
        android:layout_height="@dimen/text_height"
        android:layout_width="@dimen/text_width"
        android:background="@color/colorWhite"
        android:layout_below="@id/text2"
        android:layout_marginTop="@dimen/top_distance"
        android:id="@+id/text4"/>
    <TextView
        android:layout_height="@dimen/text_height"
        android:layout_width="@dimen/text_width"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/top_distance"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text2"
        android:id="@+id/text5"/>
    <TextView
        android:layout_height="@dimen/text_height"
        android:layout_width="@dimen/text_width"
        android:background="@color/colorWhite"
        android:layout_below="@id/text3"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/top_distance"
        android:id="@+id/text6"/>
    <TextView
        android:layout_height="300dp"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_below="@id/text4"
        android:layout_marginTop="@dimen/top_distance"
        android:id="@+id/text7"/>

    <TextView
        android:layout_height="@dimen/text_height"
        android:layout_width="100dp"
        android:background="@color/colorBlack"
        android:layout_alignTop="@id/text7"
        android:id="@+id/text8"/>

    <TextView
        android:layout_height="@dimen/text_height"
        android:layout_width="200dp"
        android:background="@color/colorBlack"
        android:layout_below="@id/text8"
        android:id="@+id/text9"/>

    <TextView
        android:layout_height="@dimen/text_height"
        android:layout_width="300dp"
        android:background="@color/colorBlack"
        android:layout_below="@id/text9"
        android:id="@+id/text10"/>

    <TextView
        android:layout_height="@dimen/text_height"
        android:layout_width="300dp"
        android:background="@color/colorGrey"
        android:layout_below="@id/text10"
        android:id="@+id/text11"/>

    <TextView
        android:layout_height="@dimen/text_height"
        android:layout_width="200dp"
        android:background="@color/colorGrey"
        android:layout_below="@id/text11"
        android:id="@+id/text12"/>

    <TextView
        android:layout_height="@dimen/text_height"
        android:layout_width="100dp"
        android:background="@color/colorGrey"
        android:layout_below="@id/text12"
        android:id="@+id/text13"/>

    <TextView
        android:layout_height="@dimen/text_height"
        android:layout_width="@dimen/text_width"
        android:background="@color/colorGrey"
        android:layout_below="@id/text7"
        android:layout_marginTop="@dimen/top_distance"
        android:id="@+id/text14"/>

    <TextView
        android:layout_height="@dimen/text_height"
        android:layout_width="@dimen/text_width"
        android:background="@color/colorBlack"
        android:layout_toRightOf="@id/text14"
        android:layout_alignTop="@id/text14"
        android:id="@+id/text15"/>

    <TextView
        android:layout_height="@dimen/text_height"
        android:layout_width="@dimen/text_width"
        android:background="@color/colorGrey"
        android:layout_toRightOf="@id/text15"
        android:layout_alignTop="@id/text15"
        android:id="@+id/text16"/>
</RelativeLayout>
